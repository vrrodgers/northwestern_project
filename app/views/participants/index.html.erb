<h1>Participants</h1>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="participants-tab" data-toggle="tab" href="#participants" role="tab" aria-controls="home" aria-selected="true">All Participants</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="yob-tab" data-toggle="tab" href="#yob" role="tab" aria-controls="yob" aria-selected="false">Year of Birth</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="by_gender-tab" data-toggle="tab" href="#by_gender" role="tab" aria-controls="by_gender" aria-selected="false">Group by Coordinator & Gender Count</a>
  </li>
</ul>

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="participants" role="tabpanel" aria-labelledby="participants-tab">
    <table class="table">
      <thead>
        <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>Birth Date</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @participants.each do |participant| %>
          <tr>
            <td><%= participant.name %></td>
            <td><%= participant.gender %></td>
            <td><%= participant.date_of_birth %></td>
            <td><%= participant.phone%></td>
            <td><%= participant.email%></td>
            <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
            <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Participant', new_participant_path %>
  </div>

  <div class="tab-pane fade" id="yob" role="tabpanel" aria-labelledby="yob-tab">
    <table class="table">
      <thead>
        <tr>
        <th>Coordinator</th>
        <th>Gender</th>
        <th>Gender Count</th>
        </tr>
      </thead>

      <tbody>
        <% @yob.each do |participant| %>
          <tr>
            <td><%= participant[0]%></td>
            <td><%= participant[1]%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Participant', new_participant_path %>
  </div>

  <div class="tab-pane fade" id="by_gender" role="tabpanel" aria-labelledby="by_gender-tab">
    <table class="table">
      <thead>
        <tr>
        <th>Coordinator</th>
        <th>Gender</th>
        <th>Gender Count</th>
        </tr>
      </thead>

      <tbody>
        <% @coordinator_participants_by_gender.each do |record| %>
          <tr>
            <td><%= record.coordinator.name.split.map(&:capitalize).join(' ')%></td>
            <td><%= record.gender.capitalize%></td>
            <td><%= record.count%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Participant', new_participant_path %>
  </div>

</div>
