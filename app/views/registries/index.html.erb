<h1>Registry</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Enrollments</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @registries.each do |registry| %>
      <tr>
        <td><%= link_to registry.name, registry_enrollments_path(registry) %></td>
        <td><%= registry.location %></td>
        <td><%= registry.enrollments.length %></td>
        <td><%= link_to registry.status , registry_toggle_status_path(registry), class: "btn btn-primary"%></td>
        <td><%= link_to 'Enroll', new_registry_enrollment_path(registry) if registry.open? %></td>
        <td><%= link_to 'Edit', edit_registry_path(registry) %></td>
        <td><%= link_to 'Destroy', registry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Coodinator', new_registry_coordinator_registry_path(registry) %>
            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

